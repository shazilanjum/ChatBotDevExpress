@using AIChatApp.ViewModels
@code {
    [Parameter] public ChatMessageViewModel MessageVM { get; set; }
}

<div class="message-container">
    <p>
        <strong>@MessageVM.Sender:</strong> @MessageVM.Message
        <span class="timestamp">(@MessageVM.Timestamp.ToShortTimeString())</span>
    </p>
</div>

<style>
    .message-container {
        padding: 10px;
        margin: 5px;
        border-radius: 5px;
        background-color: #f1f1f1;
    }
    .timestamp {
        font-size: 0.8em;
        color: gray;
    }
</style>
